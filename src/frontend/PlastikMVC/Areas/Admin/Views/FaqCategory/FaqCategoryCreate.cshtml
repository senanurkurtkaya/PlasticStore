@using PlastikMVC.Client.Models.Request.FaqCategoryRequest
@model CreateFaqCategoryRequest

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<header class="bg-success py-4 text-white text-center">
    <h2>Yeni Kategori Ekle</h2>
</header>

<div class="container mt-4">

    @if (TempData["FaqCategoryCreateErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["FaqCategoryCreateErrorMessage"]</div>
        TempData["FaqCategoryCreateErrorMessage"] = null;
    }

    <form method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Kategori Adı</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required>
        </div>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>