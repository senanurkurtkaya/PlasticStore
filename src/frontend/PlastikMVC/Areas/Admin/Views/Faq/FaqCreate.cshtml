@using PlastikMVC.Client.Models.Request.FaqRequest
@model CreateFaqRequest

@{
    ViewData["Title"] = "Yeni SSS Ekle";
    var categories = ViewBag.FaqCategories;
}

<header class="bg-success py-4 text-white text-center">
    <h2>Yeni Sıkça Sorulan Soru Ekle</h2>
</header>

<div class="container mt-4">
    <form method="post">
        <div class="mb-3">
            <label for="question" class="form-label">Soru</label>
            <input type="text" class="form-control" id="question" asp-for="Question" required>
        </div>
        <div class="mb-3">
            <label for="answer" class="form-label">Cevap</label>
            <textarea class="form-control" id="answer" asp-for="Answer" rows="4" required></textarea>
        </div>
        <div class="mb-3">
            <label for="categoryId" class="form-label">Kategori</label>
            <select class="form-control" id="categoryId" asp-for="CategoryId" required>
                <option>Kategori Seçin</option>
                @foreach (var category in categories) 
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
