@using PlastikMVC.Client.Models.Response.ProductResponse
@model GetAllProductResponse
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h1 class="text-center my-4 display-4">Ürün Detayları</h1>
    <hr />

    <!-- Mesajların Görüntülenmesi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    
    <div class="card shadow-sm">

        <!-- İçerik -->
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th class="w-25">Ad</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Fiyat</th>
                    <td>@Model.Price.ToString("C")</td>
                </tr>
                <tr>
                    <th>Açıklama</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <th>Kategori</th>
                    <td>@Model.CategoryName</td>
                </tr>
                <tr>
                    <th>Aktif Mi?</th>
                    <td>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Evet</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Hayır</span>
                        }
                    </td>
                </tr>
            </table>
        </div>

        <!-- Footer: Eylem Butonları -->
        <div class="card-footer text-center">
            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                <i class="fas fa-trash"></i> Sil
            </a>
            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Geri
            </a>

        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
