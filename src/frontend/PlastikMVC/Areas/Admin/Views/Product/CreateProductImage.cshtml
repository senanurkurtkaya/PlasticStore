@using PlastikMVC.Client.Models.Request.ProductRequest
@model CreateProductImageRequest
@{
    ViewData["Title"] = "Yeni Ürün Resmi Ekle";
}

<div class="container mt-4">
    <h2 class="text-center">Yeni Ürün Resmi Ekle</h2>
    <hr />

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card border-0 shadow-sm w-100">
        <div class="card-body p-4">
            <form asp-action="AddProductImage" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ProductId" />

                <div class="mb-3">
                    <label for="ProductImage" class="form-label">Ürün Resmi:</label>
                    <input type="file" id="ProductImage" name="ProductImage" class="form-control" accept="image/*" />
                </div>


                <div class="mb-3">
                    <label asp-for="AltText" class="form-label">Alt Metin</label>
                    <input asp-for="AltText" class="form-control" required />
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsPreviewImage" class="form-check-input" type="checkbox" />
                    <label asp-for="IsPreviewImage" class="form-check-label">Bu resmi önizleme olarak kullan</label>
                </div>

                <input asp-for="ProductId" type="number" name="ProductId" value="@Model.ProductId" style="display:none;" />

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Resmi Ekle
                </button>
                <a href="@($"/Admin/Product/{Model.ProductId}/CreateProductImage")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </form>
        </div>
    </div>
</div>