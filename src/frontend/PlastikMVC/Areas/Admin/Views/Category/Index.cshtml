@using PlastikMVC.Client.Models.Response.CategoryResponse
@model List<GetAllCategoryResponse>

<div class="container mt-4">
    <h1 class="text-center my-4 display-4">Kategoriler</h1>
    <hr />

    <!-- Üst Başlık ve Yeni Kategori Butonu -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Kategori Listesi</h3>
        <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success">+ Yeni Kategori</a>
    </div>

    <div class="container shadow-sm p-4 mb-5 bg-body-tertiary rounded">
        <!-- Kategori Tablosu -->
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-primary text-center">
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>Açıklama</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.Description</td> <!-- Açıklama Kısmı -->
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a asp-area="Admin" asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm me-2">Detaylar</a>
                                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary btn-sm me-2">Düzenle</a>
                                    <form asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">Henüz kategori bulunmamaktadır.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>