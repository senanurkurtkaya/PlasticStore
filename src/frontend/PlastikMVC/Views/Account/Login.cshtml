@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PlastikMVC.AllDtos.UserDtos.UserLoginModel

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">Giriş Yap</h2>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>

        <div class="text-center mt-3">
            <a href="#" class="text-muted">Şifremi Unuttum</a>
        </div>
        <div class="text-center mt-3">
            <span>Hesabınız yok mu? <a asp-action="Register" class="text-primary">Kayıt Ol</a></span>
        </div>
    </div>
</div>
