@model PlastikMVC.AllDtos.CustomerRequestDtos.PurposalRequestViewModel

@{
    ViewData["Title"] = "Fiyat Teklif Talebi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="text-center">Fiyat Teklif Talebi</h4>
                </div>
                <div class="card-body">
                    @* <form asp-area="Admin" asp-controller="CustomerService" asp-action="CreatePurposalRequest" method="post">    *@
                    <form action="/CustomerService/CreatePurposalRequest" method="post">
                        <div class="mb-3">
                            <label asp-for="CustomerUsername" class="form-label">Müşteri Kullanıcı Adı</label>
                            <input asp-for="CustomerUsername" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="IsProposalRequest" class="form-label">Teklif mi?</label>
                            <select asp-for="IsProposalRequest" class="form-select">
                                <option value="true">Evet</option>
                                <option value="false">Hayır</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EstimatedPrice" class="form-label">Teklif Edilen Fiyat</label>
                            <div class="input-group">
                                <input asp-for="EstimatedPrice" type="number" step="0.01" class="form-control" placeholder="Teklif fiyatı giriniz..." />
                                <span class="input-group-text">₺</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProposalDetails" class="form-label">Teklif İçeriği</label>
                            <textarea asp-for="ProposalDetails" class="form-control" rows="3" placeholder="Teklif detaylarını giriniz..."></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Teklif Gönder</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
