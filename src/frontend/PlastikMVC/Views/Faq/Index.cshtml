@using PlastikMVC.Models.Faq
@model FaqViewModel

@{
    ViewData["Title"] = "Sıkça Sorulan Sorular";
}

<h2 class="text-center mb-4">Sıkça Sorulan Sorular</h2>

<div class="accordion" id="faqAccordion">
    @foreach (var category in Model.FaqCategories)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading-@category.Id">
                <button class="accordion-button collapsed" type="button" data-toggle="collapse" data-target="#collapse-@category.Id" aria-expanded="false" aria-controls="collapse-@category.Id">
                    @category.Name
                </button>
            </h2>
            <div id="collapse-@category.Id" class="accordion-collapse collapse" aria-labelledby="heading-@category.Id" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                    @if (category.Questions != null && category.Questions.Any())
                    {
                        <ul class="list-group">
                            @foreach (var faq in category.Questions)
                            {
                                <li class="list-group-item">
                                    <strong>@faq.Question</strong>
                                    <p class="mt-2">@faq.Answer</p>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Bu kategoriye ait soru bulunmamaktadır.</p>
                    }
                </div>
            </div>
        </div>
    }
</div>