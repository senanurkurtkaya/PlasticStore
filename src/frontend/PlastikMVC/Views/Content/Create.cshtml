@model PlastikMVC.AllDtos.ContentDtos.ContentAddDto

@{
    ViewData["Title"] = "Yeni İçerik Ekle";
}

<div class="container mt-4">
    <h2>Yeni İçerik Ekle</h2>

    <form asp-controller="Content" asp-action="Create" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Özet</label>
            <textarea asp-for="Summary" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Ana içerik</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Slug</label>
            <textarea asp-for="Slug" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Kaynak</label>
            <textarea asp-for="ContentSource" class="form-control"></textarea>
        </div>
        <div class="mb-3 form-check">
            <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="IsFeatured">Öne Çıkan İçerik</label>
        </div>
        <div class="mb-3">
            <label class="form-label">Planlanan Yayınlanma Tarihi</label>
            <input asp-for="ScheduledPublishDate" type="datetime-local" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Medya Yükle</label>
            <input asp-for="MediaFiles" type="file" class="form-control" multiple />
        </div>

        <button type="submit" class="btn btn-success">Ekle</button>
        <a asp-controller="Content" asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
