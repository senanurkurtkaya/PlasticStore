@model PlastikMVC.AllDtos.ContentDtos.ContentUpdateDto

@{
    ViewData["Title"] = "İçeriği Düzenle";
}

<div class="container mt-4">
    <h2>İçeriği Düzenle</h2>

    <form asp-controller="Content" asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Ana İçerik</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Özet</label>
            <textarea asp-for="Summary" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Slug (URL)</label>
            <input asp-for="Slug" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Kaynak</label>
            <textarea asp-for="ContentSource" class="form-control"></textarea>
        </div>
    
        <div class="mb-3 form-check">
            <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="IsFeatured">Öne Çıkan İçerik</label>
        </div>
       
        <div class="mb-3">
            <label class="form-label">Planlanan Yayınlanma Tarihi</label>
            <input asp-for="ScheduledPublishDate" type="datetime-local" class="form-control" />
        </div>
    
        <div class="mb-3">
            <label class="form-label">Medya Yükle</label>
            <input asp-for="MediaFiles" type="file" class="form-control" multiple />
        </div>
  
        @if (Model.Medias != null && Model.Medias.Any())
        {
            <div class="mb-3">
                <label class="form-label">Mevcut Medya</label>
                <div class="row">
                    @foreach (var media in Model.Medias)
                    {
                        <div class="col-md-3 text-center">
                            <img src="@media.Url" class="img-thumbnail" alt="Media">
                            <p class="text-muted">@media.AltText</p>
                        </div>
                    }
                </div>
            </div>
        }

        <button type="submit" class="btn btn-success">Güncelle</button>
        <a asp-controller="Content" asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
