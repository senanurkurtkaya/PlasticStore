@model List<PlastikMVC.AllDtos.ContentDtos.ContentGetAllDto>

@{
    ViewData["Title"] = "İçerikler";
}

<div class="container mt-4">
    <h2 class="mb-3">İçerikler</h2>

    <a asp-controller="Content" asp-action="Create" class="btn btn-primary mb-3">Yeni İçerik Ekle</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Başlık</th>
                <th>Ana İçerik</th>
                <th>Özet</th>
                <th>Yayınlanma Tarihi</th>
                <th>Planlanan Yayınlanma Tarihi</th>
                <th>İçerik Kaynağı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Body</td>
                        <td>@item.Summary</td>
                        <td>@item.PublishedDate?.ToString("dd/MM/yyyy")</td>                   
                        <td>@item.ScheduledPublishDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.ContentSource</td>
                        <td>
                            <a asp-controller="Content" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                            <a asp-controller="Content" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                            <a asp-controller="Content" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div> 