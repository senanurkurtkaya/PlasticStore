@using PlastikMVC.AllDtos.RoleDtos
@model DeleteRoleModel
@* ++ Role Views added ONR / 18.01.2025 04:25 *@
<h1>Delete Role</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure?</h4>
    <p>Are you sure you want to delete the role <strong>@Model.Name</strong>? This action cannot be undone.</p>
    <hr />
    <p class="mb-0">Please confirm your action below:</p>
</div>

<form asp-controller="Role" asp-action="DeleteRole" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
    <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>