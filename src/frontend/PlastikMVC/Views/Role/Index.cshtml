@using PlastikMVC.AllDtos.RoleDtos
@model IEnumerable<GetAllRolesModel>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Role Yönetimi</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f5f8fa;
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
        }

        .card-header {
            background-color: #007bff;
            color: white;
            font-size: 1.2rem;
        }

        .btn-primary, .btn-warning, .btn-danger {
            font-weight: 600;
        }

        table th, table td {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Role Yönetimi</a>
        </div>
    </nav>

    <div class="container mt-5">
        <!-- Card -->
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Roller</span>
                <a asp-controller="Role" asp-action="CreateRole" class="btn btn-light btn-sm text-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Rol Ekle
                </a>
            </div>
            <div class="card-body">
                <!-- Table -->
                <table class="table table-bordered table-hover">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>#</th>
                            <th>Rol Adı</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.CreatedDate</td>
                            </tr>
                            <tr>
                                <td>1</td>
                                <td>Admin</td>
                                <td>Yönetici rolü</td>
                                <td class="text-center">
                                    <!-- Edit Button -->
                                    <a asp-controller="Role" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                    <!-- Delete Button -->
                                    <form asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu rolü silmek istediğinizden emin misiniz?');">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Editor</td>
                                <td>İçerik düzenleme yetkisi</td>
                                <td class="text-center">
                                    <a asp-controller="Role" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                    <form asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu rolü silmek istediğinizden emin misiniz?');">
                                            <i class="bi bi-trash"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
