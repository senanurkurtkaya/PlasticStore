@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<PlastikMVC.Models.TeamMember>

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-4 font-weight-bold mb-4">Hakkımızda</h1>
        <p class="lead">
            Kullanıcıların hayatını kolaylaştıran ve yönetim süreçlerini hızlandıran modern bir platform sunuyoruz.
        </p>
    </div>
   
    <!-- Vizyon ve Misyon -->
    <div class="row text-center my-5">
        <div class="col-md-6">
            <h3 class="font-weight-bold">Vizyonumuz</h3>
            <p class="text-muted">
                Dijital çözümlerle iş süreçlerini dönüştürerek herkes için erişilebilir ve verimli bir platform sağlamak.
            </p>
        </div>
        <div class="col-md-6">
            <h3 class="font-weight-bold">Misyonumuz</h3>
            <p class="text-muted">
                Güvenilir, hızlı ve kullanıcı dostu bir deneyim sunarak işletmelerin ve bireylerin ihtiyaçlarını karşılamak.
            </p>
        </div>
    </div>

    <!-- Ekibimiz -->
    <div class="container my-5">
        <h1 class="text-center font-weight-bold mb-5">Ekibimiz</h1>

        <div class="row">
            @foreach (var member in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <img src="@member.ImagePath" class="card-img-top rounded-circle mx-auto mt-3"
                             style="width: 150px; height: 150px; object-fit: cover;" alt="@member.Name" />
                        <div class="card-body text-center">
                            <h5 class="card-title font-weight-bold">@member.Name</h5>
                            <p class="card-text text-muted">@member.Title</p>
                            @if (!string.IsNullOrEmpty(member.TwitterUrl))
                            {
                                <a href="@member.TwitterUrl" class="text-muted mx-2 no-underline" target="_blank" rel="noopener noreferrer">
                                    <img src="/images/square-x-twitter-brands-solid.svg" alt="Twitter X" style="width: 24px; height: 24px;">
                                </a>

                            }
                            @if (!string.IsNullOrEmpty(member.LinkedInUrl))
                            {
                                <a href="@member.LinkedInUrl" class="text-muted mx-2 no-underline" target="_blank" rel="noopener noreferrer">
                                    <img src="/images/linkedin-brands-solid.svg" alt="Twitter X" style="width: 24px; height: 24px;">
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(member.InstagramUrl))
                            {
                                <a href="@member.InstagramUrl" class="text-muted mx-2 no-underline" target="_blank" rel="noopener noreferrer">
                                    <img src="/images/instagram-brands-solid.svg" alt="Twitter X" style="width: 24px; height: 24px;">
                                </a>
                            }
                        </div>                      
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Değerlerimiz -->
    <div class="my-5">
        <h2 class="text-center font-weight-bold mb-4">Değerlerimiz</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <i class="bi bi-shield-check display-4 text-primary"></i>
                <h5 class="mt-3 font-weight-bold">Güven</h5>
                <p class="text-muted">Kullanıcılarımızın verilerini ve gizliliğini en üst düzeyde koruyoruz.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-lightning-charge display-4 text-warning"></i>
                <h5 class="mt-3 font-weight-bold">Hız</h5>
                <p class="text-muted">İş süreçlerini hızlı ve sorunsuz bir şekilde tamamlamayı önceliğimiz yapıyoruz.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-people display-4 text-success"></i>
                <h5 class="mt-3 font-weight-bold">Kullanıcı Odaklılık</h5>
                <p class="text-muted">Kullanıcı deneyimini sürekli iyileştirerek beklentilerin üzerinde hizmet sunuyoruz.</p>
            </div>
        </div>
    </div>

    <!-- İletişim -->
    <div class="my-5 text-center">
        <h2 class="font-weight-bold">Bizimle İletişime Geçin</h2>
        <p class="text-muted">
            Sorularınız veya iş birliği tekliflerinizi paylaşmak için bize ulaşın.
        </p>
        <a href="mailto:info@ornekproje.com" class="btn btn-primary btn-lg">
            <i class="bi bi-envelope"></i> Bize Ulaşın
        </a>
    </div>
</div>

